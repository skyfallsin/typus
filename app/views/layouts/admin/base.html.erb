<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>

  <meta charset="utf-8" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="generator" content="Typus <%= Typus::VERSION %>" />

  <title><%= yield :title %></title>

  <%= stylesheet_link_tag "/stylesheets/screen",
                          "/stylesheets/application",
                          "/vendor/fancybox/jquery.fancybox-1.3.4.css" %>
  <%= yield :stylesheets -%>

  <%= javascript_include_tag "/javascripts/jquery-1.4.4.min.js",
                             "/javascripts/jquery.searchField.js",
                             "/javascripts/jquery.rails.js",
                             "/vendor/fancybox/jquery.fancybox-1.3.4.pack.js",
                             "/javascripts/jquery.application.js",
                             "/javascripts/application" %>
  <%= yield :javascripts -%>

  <%= csrf_meta_tag %>

</head>

<body>

  <div id="wrapper">

    <div id="header_wrapper">

      <div id="header">
        <%= header %>
        <div class="clear"></div>
      </div>

      <div id="links">

        <div class="left">
          <%= apps %>
        </div>

        <div class="right">
          <%= login_info %>
        </div>

        <div class="clear"></div>

      </div>

    </div>

    <div id="content_wrapper">

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

      <div id="content">
        <%= yield :layout %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer_wrapper">

      <div id="footer">
        <%= Typus.admin_sub_title.html_safe %>
      </div>

    </div>

  </div>

</body>

</html>
